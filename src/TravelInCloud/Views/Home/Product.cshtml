@model TravelInCloud.Models.HomeViewModels.ProductViewModel


<div class="swiper-container home-slider" style="height:260px;">
    <ul class="swiper-wrapper">
        @foreach (var Image in Model.Product.ImageOfProducts)
        {
        <li class="swiper-slide">
            <a href="javascript:;"style="width:100%;height:280px;position:relative;">
                <img src="@Image.ImageSrc" alt=""  style="min-height:100%;min-width:100%; max-width:100%;height:auto; display:block;vertical-align:central"/>
            </a>
        </li>
        }
    </ul>
    <div class="swiper-pagination"></div>
</div>

<div class="weui-cells">
    <a class="weui-cell weui-cell_access" href="javascript:;">
        <div class="weui-cell__bd">
            <p>选择分类、品型</p>
        </div>
        <div class="weui-cell__ft">购买的商品品种</div>
    </a>
</div>
<div class="weui-cells">
    <a class="weui-cell weui-cell_access" href="javascript:;">
        <div class="weui-cell__bd">
            <p>查看评价</p>
        </div>
        <div class="weui-cell__ft">已购买用户的评价</div>
    </a>
</div>
<div class="weui-cells">
    <a class="weui-cell weui-cell_access" href="javascript:;">
        <div class="weui-cell__bd">
            <p>购买说明</p>
        </div>
    </a>
</div>
<div class="weui-panel weui-panel_access" style="margin-top:0">
    <article class="weui-article">
        @Model.Product.ProductWarnning
    </article>
</div>

<div class="weui-flex weui-form-preview">
    <div class="weui-flex__item">
        <div class="placeholder">
            <div class="weui-form-preview__ft">
                <a class="weui-form-preview__btn weui-form-preview__btn_default" href="javascript:">产品特色</a>
            </div>
        </div>
    </div>
    <div class="weui-flex__item">
        <div class="placeholder">
            <div class="weui-form-preview__ft">
                <a class="weui-form-preview__btn weui-form-preview__btn_primary" href="javascript:">费用说明</a>
            </div>
        </div>
    </div>
</div>


<div class="weui-panel weui-panel_access" style="margin-top:0">
    <article class="weui-article">
        @Model.Product.ProductDetails
    </article>
</div>

@section Scripts {
    <script src="~/lib/Swiper/dist/js/swiper.min.js" type="text/javascript"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: '.swiper-pagination',
            slidesPerView: 1,
            paginationClickable: true,
            spaceBetween: 0,
            loop: true,
        });
    </script>
}
